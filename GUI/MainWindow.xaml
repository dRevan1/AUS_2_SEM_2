<Window x:Class="GUI.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GUI"
    mc:Ignorable="d"
    Title="Main window" Height="870" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,0,5">
                    <Button Content="Populate" Click="PopulateBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="View binary file(s)" Click="ViewContentBtn_Click" Width="auto" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="Create database" Click="CreateDatabaseBtn_Click" Width="auto" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="Load database" Click="LoadDatabaseBtn_Click" Width="auto" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="#1 Insert PCR test" Click="InsertTestBtn_Click" Width="auto" Height="30" Margin="0,25,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="#2 Find person" Click="FindPersonBtn_Click" Width="auto" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="#3 Find PCR test" Click="FindTestBtn_Click" Width="auto" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="#4 Insert person" Click="InsertPersonBtn_Click" Width="auto" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="#7 Edit person" Click="EditPersonBtn_Click" Width="auto" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="#8 Edit PCR test" Click="EditTestBtn_Click" Width="auto" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="7,0,0,5">
                    <TextBlock Text="Person/test ID:" Margin="5" FontWeight="Bold"/>
                    <TextBlock Text="Database name:" Margin="5, 8, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="People mod:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="People primary block size:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="People overflow block size:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Tests mod:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Tests primary block size:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Tests overflow block size:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="6,0,0,5">
                    <TextBox Name="ID" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="Dat_name" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="P_mod" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="P_prim_size" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="P_ovrf_size" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="T_mod" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="T_prim_size" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="T_ovrf_size" Height="23" Width="200" Margin="3"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
