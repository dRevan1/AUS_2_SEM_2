<Window x:Class="GUI.GenerateRecords"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Populate database" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,0,5">
                    <TextBlock Text="PEOPLE" Margin="5" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Count:" Margin="5, 8, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="FROM:" Margin="5, 8, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Day:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Month:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Year:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="TO:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Day:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Month:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Year:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <Button Content="Generate" Click="GenerateBtn_Click" Margin="0, 13, 0, 0" Width="auto" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="6,27,0,5">
                    <TextBox Name="Ppl_count" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="Ppl_dfrom" Height="23" Width="200" Margin="3, 28, 3, 3"/>
                    <TextBox Name="Ppl_mfrom" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="Ppl_yfrom" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="Ppl_dto" Height="23" Width="200" Margin="3, 33, 3, 3"/>
                    <TextBox Name="Ppl_mto" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="Ppl_yto" Height="23" Width="200" Margin="3"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="7,0,0,5">
                    <TextBlock Text="PCR TESTS" Margin="5" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Count:" Margin="5, 8, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="FROM:" Margin="5, 8, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Day:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Month:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Year:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="TO:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Day:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Month:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                    <TextBlock Text="Year:" Margin="5, 13, 0, 0" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="3" Orientation="Vertical" Margin="6,27,0,5">
                    <TextBox Name="T_count" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="T_dfrom" Height="23" Width="200" Margin="3, 28, 3, 3"/>
                    <TextBox Name="T_mfrom" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="T_yfrom" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="T_dto" Height="23" Width="200" Margin="3, 33, 3, 3"/>
                    <TextBox Name="T_mto" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="T_yto" Height="23" Width="200" Margin="3"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
