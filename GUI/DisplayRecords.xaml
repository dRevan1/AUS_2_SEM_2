<Window x:Class="GUI.DisplayRecords"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:models="clr-namespace:SEM_2_CORE;assembly=SEM_2_CORE" 
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="24"/>
                <RowDefinition Height="Auto" MinHeight="24"/>
                <RowDefinition Height="Auto" MinHeight="24"/>
                <RowDefinition Height="Auto" MinHeight="24"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" VerticalAlignment="Center">
                <Run Text="Person " FontWeight="Bold"/>
            </TextBlock>
            <TextBlock Grid.Row="1" VerticalAlignment="Center" Text="{Binding PersonData}" ></TextBlock>

            <TextBlock Grid.Row="2" Text="{Binding TestCount, StringFormat=Number of tests: {0}}"></TextBlock>
            <ListBox x:Name="TestList" Grid.Row="3" ItemsSource="{Binding Tests}" Grid.ColumnSpan="1" Margin="5,3" VerticalAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:PCRTest}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0">
                                <Run Text="Test date: " FontWeight="Bold"/><Run Text="{Binding DayOfTest}"/><Run Text="."/><Run Text="{Binding MonthOfTest}"/><Run Text="."/><Run Text="{Binding YearOfTest}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="1">
                                <Run Text="Test time: " FontWeight="Bold"/><Run Text="{Binding HourOfTest}"/><Run Text=":"/><Run Text="{Binding MinuteOfTest}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="2">
                                <Run Text="Person ID: " FontWeight="Bold"/><Run Text="{Binding PersonID}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="3">
                                <Run Text="Test ID: " FontWeight="Bold"/><Run Text="{Binding ID}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="4">
                                <Run Text="Is positive: " FontWeight="Bold"/><Run Text="{Binding Result}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="5">
                                <Run Text="Test value: " FontWeight="Bold"/><Run Text="{Binding TestValue}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="6">
                                <Run Text="Note: " FontWeight="Bold"/><Run Text="{Binding Note}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="7" Text="-------------------"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </ScrollViewer>
</Window>