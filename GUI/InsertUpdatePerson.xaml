<Window x:Class="GUI.InsertUpdatePerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:models="clr-namespace:SEM_2_CORE;assembly=SEM_2_CORE" 
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="34"/>
            <RowDefinition Height="Auto" MinHeight="34"/>
            <RowDefinition Height="Auto" MinHeight="34"/>
            <RowDefinition Height="Auto" MinHeight="34"/>
            <RowDefinition Height="Auto" MinHeight="34"/>
            <RowDefinition Height="Auto" MinHeight="34"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Name:" Margin="5" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="0" Name="Name_Box" Height="23" Width="200" Margin="3" VerticalAlignment="Center"/>

        <TextBlock Grid.Column="0" Grid.Row="1" Text="Surname:" Margin="5" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="1" Name="Surname_Box" Height="23" Width="200" Margin="3" VerticalAlignment="Center"/>

        <TextBlock Grid.Column="0" Grid.Row="2" Text="Day of birth:" Margin="5" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="2" Name="DOB_Box" Height="23" Width="200" Margin="3" VerticalAlignment="Center"/>

        <TextBlock Grid.Column="0" Grid.Row="3" Text="Month of birth:" Margin="5" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="3" Name="MOB_Box" Height="23" Width="200" Margin="3" VerticalAlignment="Center"/>

        <TextBlock Grid.Column="0" Grid.Row="4" Text="Year of birth:" Margin="5" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="4" Name="YOB_Box" Height="23" Width="200" Margin="3" VerticalAlignment="Center"/>

        <TextBlock Grid.Column="0" Grid.Row="5" Text="ID:" Margin="5" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="5" Name="ID_Box" Height="23" Width="200" Margin="3" VerticalAlignment="Center"/>

        <Button Grid.Row="6" Content="{Binding ButtonText}" Click="InsertUpdateBtn_Click" Width="auto" Height="30" Margin="3" VerticalAlignment="Center"/>
    </Grid>
</Window>
